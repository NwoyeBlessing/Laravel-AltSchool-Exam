#!/bin/bash

#update cache & upgrade
apt -y update && sudo apt -y upgrade

#install GnuPG
apt install -y gnupg2

#Add postgreSQL APT Repository
sh -c 'echo "deb://apt.postgresql.org/pub/repos/apt $(lsb-release -cs)-pgdg main"> /etc/apt/sources.list.d/pgdg.list'

#Download PostgreSQL ASC key
wget --quiet -o  - https://www.postgresql.org/media/keys/ACCC4CF8.asc | sudo apt-key add -

#update APT Cache
apt -y update

#install postgreSQL
apt -y install postgresql-15
